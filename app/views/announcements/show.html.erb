<section id=announcement>
  <p id="notice"><%= notice %></p>
  
  <article>
    <h1><%= @announcement.title %></h1>
    <%= image_tag @announcement.image_url, :id => "icon" %>
    <p><%= raw @announcement.content %></p>
    <img src="<%= asset_path 'about/shadow.png' %>" />
    <%= @announcement.author %> <%= I18n.t 'announcement.time_prefix' %> <%= I18n.l @announcement.updated_at %>
  </article>
  
  <%= link_to I18n.t('announcement.previous'), @announcement.previous unless @announcement.previous.nil? %> |
  <%= link_to I18n.t('announcement.back'), announcements_path %> |
  <%= link_to I18n.t('announcement.next'), @announcement.next unless @announcement.next.nil? %>
</section>
