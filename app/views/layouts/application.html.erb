<!DOCTYPE html>
<html>
<head>
  <title>Wack-a-Doo<%= @title.blank? ? "" : " | #{@title}"  %></title>
  <script>
  
    var path_fragments = {
      'de_DE': '/de',
      'en_EN': '/en',
    }
  
    window.current_locale = "<%=I18n.t 'locale' %>";
    window.locale_path_frag = path_fragments[window.current_locale] || '/de'; // must change this to en as soon as internationalization is working
    window.startMsg = "<%= @message %>";

<% if !@invitation.nil? %>
    window.invitation = "<%= @invitation %>";
<% end %>

    // Google Analytics
    var _gaq = _gaq || [];
    _gaq.push(['_setAccount', 'UA-33777536-1']);
    _gaq.push(['_trackPageview']);
  
    (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
    })();

  </script>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<%= yield %>


</body>
</html>



